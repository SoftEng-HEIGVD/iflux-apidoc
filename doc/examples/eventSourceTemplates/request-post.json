{
  "name": "iFlux thermometer",
  "public": true,
  "organizationId": 1,
  "configuration": {
    "schema": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "captorId": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [ "captorId" ]
    },
    "url": "http://some.cool.weather.service/configuration",
    "token": "<JSON Web Token>"
  },
  "configurationUi": {
    "schemaForm": [ "captorId", {
      "type": "submit",
      "style": "btn-primary",
      "title": "Submit"
    } ]
  }
}