{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Event source instance",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique identifier given by the server",
      "type": "integer"
    },
    "eventSourceInstanceId": {
      "description": "Unique id generated by the server.",
      "type": "string"
    },
    "name": {
      "description": "A name to identify the event source instance.",
      "type": "string"
    },
    "organizationId": {
      "description": "The organization.",
      "type": "integer"
    },
    "eventSourceTemplateId": {
      "description": "The event source template instantiated.",
      "type": "integer"
    },
    "configuration": {
      "description": "A valid JSON object.",
      "type": "json"
    }
  },
  "required": [ "id", "eventSourceInstanceId", "name", "organizationId", "eventSourceTemplateId", "configuration" ]
}